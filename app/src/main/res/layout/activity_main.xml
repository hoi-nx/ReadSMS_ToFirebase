<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:elevation="2dp"
        app:titleTextColor="@color/colorWhite"
        android:minHeight="56dp"
        android:paddingLeft="36dp" />

    <RelativeLayout
        android:background="@color/transparent"
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_actionbar">

        <ImageView
            android:id="@+id/image_email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:src="@drawable/oval_mail" />
        <TextView
            android:id="@+id/text_label_email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="A" />

        <TextView
            android:id="@+id/text_title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/image_email"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:text="Professional Android" />

        <TextView
            android:id="@+id/text_message_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title_email"
            android:layout_marginRight="48dp"
            android:layout_toRightOf="@id/image_email"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:text="Please tell us your question" />

        <TextView
            android:id="@+id/text_date_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_title_email"
            android:layout_marginLeft="-48dp"
            android:layout_toRightOf="@id/text_message_email"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"
            android:text="Oct 11" />

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl">

        <ImageView
            android:id="@+id/image_email_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:src="@drawable/oval_mail" />

        <TextView
            android:id="@+id/text_label_email_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="A" />

        <TextView
            android:id="@+id/text_title_email_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/image_email_2"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:text="Professiona Android" />

        <TextView
            android:id="@+id/text_message_email_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title_email_2"
            android:layout_marginRight="48dp"
            android:layout_toRightOf="@id/image_email_2"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:text="Please tell us your question" />

        <TextView
            android:id="@+id/text_date_email_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/text_title_email_2"
            android:layout_marginLeft="-48dp"
            android:layout_toRightOf="@id/text_message_email_2"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"
            android:text="Oct 11" />

    </RelativeLayout>



    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Không có hội thoại"
        android:textColor="#212121"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Chưa có cuộc trò chuyện nào với Professional Android"
        android:textColor="#616161"
        android:textSize="15sp" />




</RelativeLayout>
